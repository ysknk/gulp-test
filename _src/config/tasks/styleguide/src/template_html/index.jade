doctype html
//- project assets path
- var assets_path = `${root == './' ? '' : root}../assets/`
- var site_base_class = `site-base`//- css reset class
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    //- uikit
    link(href=`${root}aigis_assets/css/uikit.css` rel='stylesheet')
    script(src=`${root}aigis_assets/js/uikit.js`)
    script(src=`${root}aigis_assets/js/uikit-icons.js`)

    //- aigis
    link(href=`${root}aigis_assets/css/highlight/okadia.css` rel='stylesheet')
    link(href=`${root}aigis_assets/css/theme.css` rel='stylesheet')

    //- custom
    link(href=`${root}aigis_assets/css/custom.css` rel='stylesheet')

    //- project
    link(href=`${assets_path}css/style.css` rel='stylesheet')
    script(src=`${assets_path}js/script.js`)

  body
    .tm-container
      .uk-scope
        header.uk-navbar-container.tm-navbar-container.uk-sticky
          .uk-container.uk-container-expand
            .uk-navbar
              .uk-navbar-left: a.uk-navbar-item.uk-logo(href=root + 'index.html') #{config.name}
              .uk-navbar-right
                a.uk-navbar-toggle.uk-navbar-toggle-icon.uk-icon(href="#offcanvas-slide" uk-toggle uk-navbar-toggle-icon).

      main
        article.tm-article
          if components.length
            include ./components
          else
            .aigis-module
              != html

      footer.aigis-footer Last update at #{timestamp}

    #offcanvas-slide.uk-offcanvas.uk-scope(uk-offcanvas)
      .uk-offcanvas-bar
        aside
          include ./aside
