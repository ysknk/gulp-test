nav.uk-scope
  h2.uk-h2: span COMPONENTS
  ul.uk-list.uk-list-bullet
    each component in components
      li: a.uk-link-reset(href=`#${component.config.name}`) #{component.config.name}

each component in components
  .uk-scope
    hr.uk-margin-large

  .aigis-module
    .uk-scope
      h2.uk-h2(id=component.config.name) #{component.config.name}
    .aigis-module__filepath!= component.sourcePath.replace(/\\/g, '/').replace(/^\//, '')

    .uk-scope
      nav(data-uk-margin)
        each tag in component.config.tag
          != '\n'
          a.tm-inline-block.tm-line-height-reset.uk-link-reset(href=root+'tag/'+tag+'/index.html')
            span.uk-label(class=`uk-label-${tag}`) #{tag}

    != component.html.replace(/aigis-preview/g, `aigis-preview ${site_base_class}`)
    //- != component.html.replace(/aigis-preview/g, 'aigis-preview module-base-layout')

