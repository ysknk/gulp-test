#{$p}modal
  $this = selector('^[2..-1]')
  $close_size = 1em

  &__container
    relative top 0 left 0
    pointer-events auto

  &__close
    absolute top 0 right 0
    a
      relative top 0 left 0
      display block
      width $close_size
      height @width
      &::before,
      &::after
        absolute top 50% left 50%
        content ''
        width 100%
        height 2px
        margin-left -($close_size / 2)em
        margin-top -(@height / 2)px
        background #fff
      &::before
        transform rotate(45deg)
      &::after
        transform rotate(-45deg)

  &__content
    clear both
    overflow hidden
    background #fff
    // padding-top close_size

  &__wrapper
    overflow auto
    absolute top 0 left 0
    width 100%
    height 100%
    z-index 0
    text-align center
    &::before
      content ''
      display inline-block
      width 0
      height 100%
      vertical-align middle

  &__background
    fixed top 0 left 0
    z-index 0
    width 100%
    height 100%
    background #000
    opacity .6
    pointer-events none

  &__outer
    display inline-block
    vertical-align middle
    box-sizing border-box
    max-width 100%
    width ($wpc)px
    padding-right 20px
    padding-left @padding-right
    margin-right auto
    margin-left @margin-right

  &__inner
    relative top 0 left 0
    z-index 10
    width 100%
    height 100%

